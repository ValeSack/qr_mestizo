---
import {
  SiWhatsapp,
  SiInstagram,
  SiTiktok,
  SiGooglemaps,
  SiSpotify,
} from "react-icons/si";
import { FaTripadvisor } from "react-icons/fa";

const menuItems = [
  {
    icon: "📖",
    text: "Menú",
    href: "https://www.canva.com/design/DAGsqpuKLNY/OK7Ut_PVWhEArs4tIJCeqg/view?utm_content=DAGsqpuKLNY&utm_campaign=designshare&utm_medium=link2&utm_source=uniquelinks&utlId=h9e6f77ec57",
    color: "#fff",
    isImage: true,
  },
  {
    icon: SiSpotify,
    text: "Spotify",
    href: "https://open.spotify.com/user/31wemjafsg5m6lirvqi5cgpb5d3a",
    color: "#1DB954",
  },
  {
    icon: SiWhatsapp,
    text: "WhatsApp",
    href: "https://wa.me/+5950985377710",
    color: "#25D366",
  },
  {
    icon: SiInstagram,
    text: "Instagram",
    href: "https://instagram.com/cafecasamestiza",
    color: "#E1306C",
  },
  {
    icon: SiTiktok,
    text: "Tiktok",
    href: "https://www.tiktok.com/@cafecasamestiza",
    color: "#010101",
  },
  {
    icon: SiGooglemaps,
    text: "Ubicación",
    href: "https://www.google.com/maps/place/Casa+Mestiza+Caf%C3%A9/@-25.5146075,-54.6268038,16z/data=!4m6!3m5!1s0x94f6850b6caa0259:0x1566f5b9de5b673d!8m2!3d-25.5146051!4d-54.6227062!16s%2Fg%2F11xkz9j1p3?entry=ttu&g_ep=EgoyMDI1MDgxOS4wIKXMDSoASAFQAw%3D%3D",
    color: "red",
  },
  {
    icon: FaTripadvisor,
    text: "Tripadvisor",
    href: "https://www.tripadvisor.com.ar/Restaurant_Review-g298437-d33357192-Reviews-Casa_Mestiza_Cafe-Ciudad_Del_Este_Alto_Parana_Department.html",
    color: "black",
  },
];
---

<div class="links-section">
  <div class="container">
    <div class="links-wrapper">
      {
        menuItems.map((item) => (
          <a
            href={item.href}
            target={item.href.startsWith("http") ? "_blank" : "_self"}
            rel={item.href.startsWith("http") ? "noopener noreferrer" : ""}
            class="link-item"
          >
            <div class="link-content">
              <div class="icon-container">
                {typeof item.icon === "string" ? (
                  <span class="icon">{item.icon}</span>
                ) : (
                  <item.icon className="icon" style={{ color: item.color }} />
                )}
              </div>
              <span class="link-text">{item.text}</span>
            </div>
          </a>
        ))
      }
    </div>
  </div>
</div>

<style>
  .links-section {
    display: flex;
    align-items: flex-start;
    justify-content: center;
    padding: 0;
    margin-top: 100px;
    height: 100%;
    overflow-y: auto;
  }

  .container {
    width: 100%;
    max-width: 85vw;
    margin: 150px auto;
    padding: 1rem 0;
    height: 40vh;
    overflow-y: auto;
    scrollbar-width: thin;
  }

  .links-wrapper {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
    padding: 0;
  }

  .link-item {
    display: block;
    width: 100%;
    text-decoration: none;
    transition: transform 0.2s ease;
  }

  .link-item:hover {
    transform: translateY(-2px);
  }

  .link-content {
    display: flex;
    align-items: center;
    border: 7px solid rgba(252, 247, 247, 0.8);
    border-radius: 30px;
    padding: 0.5rem 10rem;
    backdrop-filter: blur(10px);
    transition: all 0.2s ease;
    margin-right: 50px;
    margin-left: 50px;
  }

  .link-item:hover .link-content {
    background: rgba(255, 255, 255, 0.2);
    border-color: rgba(252, 247, 247, 1);
  }

  .icon-container {
    padding: 1rem;
    display: flex;
    align-items: center;
    justify-content: center;
    flex-shrink: 0;
    width: 5rem;
    height: 5rem;
    margin-right: 2rem;
  }

  /* Scroll personalizado */
  .links-section::-webkit-scrollbar {
    width: 8px;
  }

  .links-section::-webkit-scrollbar-track {
    background: transparent;
  }

  .links-section::-webkit-scrollbar-thumb {
    background: rgba(255, 255, 255, 0.3);
    border-radius: 4px;
  }

  .links-section::-webkit-scrollbar-thumb:hover {
    background: rgba(255, 255, 255, 0.5);
  }

  .icon {
    font-size: 3.2rem;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .link-text {
    color: white;
    font-weight: 700;
    font-size: 3.2rem;
    flex: 1;
    font-family: "Amatic SC", cursive;
    text-shadow: 1px 1px 2px rgba(0, 0, 0, 0.3);
  }

  /* Responsive para móviles */
  @media (max-width: 640px) {
    .links-section {
      max-height: calc(100vh - 140px); /* Ajuste para móvil */
    }

    .container {
      max-width: 90vw;
      padding: 0.8rem 0;
    }

    .links-wrapper {
      gap: 1.3rem;
    }

    .link-content {
      padding: 0.5rem 10rem;
      border-radius: 22px;
      min-height: 105px; /* Altura consistente */
    }

    .icon-container {
      width: 4.8rem;
      height: 4.8rem;
      margin-right: 1.8rem;
    }

    .icon {
      font-size: 2.3rem;
    }

    .link-text {
      font-size: 2rem;
      font-weight: 700;
    }
  }

  @media (max-width: 480px) {
    .links-section {
      max-height: calc(100vh - 130px); /* Ajuste para móviles pequeños */
    }

    .container {
      max-width: 95vw;
      padding: 0.6rem 0;
    }

    .links-wrapper {
      gap: 1.2rem;
    }

    .link-content {
      padding: 1.6rem 1.8rem;
      min-height: 100px;
      border-radius: 20px;
    }

    .icon-container {
      width: 4.5rem;
      height: 4.5rem;
      margin-right: 1.6rem;
    }

    .icon {
      font-size: 2.1rem;
    }

    .link-text {
      font-size: 1.9rem;
      font-weight: 700;
    }
  }
</style>
