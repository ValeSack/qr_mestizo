---
import { SiWhatsapp, SiInstagram, SiTiktok, SiSpotify } from "react-icons/si";
import { FaTripadvisor } from "react-icons/fa";

const menuItems = [
  {
    icon: "游닀",
    text: "Men칰",
    href: "https://www.canva.com/design/DAGsqpuKLNY/OK7Ut_PVWhEArs4tIJCeqg/view?utm_content=DAGsqpuKLNY&utm_campaign=designshare&utm_medium=link2&utm_source=uniquelinks&utlId=h9e6f77ec57",
    color: "#fff",
    isImage: true,
  },
  {
    icon: SiSpotify,
    text: "Spotify",
    href: "https://open.spotify.com/user/31wemjafsg5m6lirvqi5cgpb5d3a",
    color: "#1DB954",
  },
  {
    icon: SiWhatsapp,
    text: "WhatsApp",
    href: "https://wa.me/+5950985377710",
    color: "#25D366",
  },
  {
    icon: SiInstagram,
    text: "Instagram",
    href: "https://instagram.com/cafecasamestiza",
    color: "#E1306C",
  },
  {
    icon: SiTiktok,
    text: "Tiktok",
    href: "https://www.tiktok.com/@cafecasamestiza",
    color: "#010101",
  },
  {
    icon: FaTripadvisor,
    text: "Tripadvisor",
    href: "https://www.tripadvisor.com.ar/Restaurant_Review-g298437-d33357192-Reviews-Casa_Mestiza_Cafe-Ciudad_Del_Este_Alto_Parana_Department.html",
    color: "black",
  },
];
---

<div class="links-section">
  <div class="container">
    <div class="links-wrapper">
      {
        menuItems.map((item) => (
          <a
            href={item.href}
            target={item.href.startsWith("http") ? "_blank" : "_self"}
            rel={item.href.startsWith("http") ? "noopener noreferrer" : ""}
            class="link-item"
          >
            <div class="link-content">
              <div class="icon-container">
                {typeof item.icon === "string" ? (
                  <span class="icon">{item.icon}</span>
                ) : (
                  <item.icon className="icon" style={{ color: item.color }} />
                )}
              </div>
              <span class="link-text">{item.text}</span>
            </div>
          </a>
        ))
      }
    </div>
  </div>
</div>

<style>
  /* Elimina el selector universal que afecta a todo */
  .links-section {
    color-scheme: light !important;
    forced-color-adjust: none !important;
  }

  .links-section {
    display: flex;
    align-items: flex-start;
    justify-content: center;
    padding: 0;
    margin-top: 200px;
    height: 100%;
  }

  .container {
    width: 100%;
    max-width: 85vw;
    margin: 100px auto;
    padding: 0;
    height: 32vh;
    overflow-y: scroll;
    scrollbar-width: thin;
  }

  .links-wrapper {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
    padding: 0;
  }

  .link-item {
    display: block;
    width: 100%;
    text-decoration: none;
    transition: transform 0.2s ease;
    color: inherit !important;
    background-color: transparent !important;
    forced-color-adjust: none !important;
  }

  .link-item:hover {
    transform: translateY(-2px);
  }

  .link-content {
    display: flex;
    align-items: center;
    border: 7px solid rgba(252, 247, 247, 0.8) !important;
    border-radius: 30px;
    padding: 0.5rem 10rem;
    backdrop-filter: blur(10px);
    transition: all 0.2s ease;
    margin-right: 50px;
    margin-left: 50px;
    background-color: transparent !important;
    color: inherit !important;
  }

  .link-item:hover .link-content {
    background: rgba(255, 255, 255, 0.2) !important;
    border-color: rgba(252, 247, 247, 1) !important;
  }

  .icon-container {
    padding: 1rem;
    display: flex;
    align-items: center;
    justify-content: center;
    flex-shrink: 0;
    width: 5rem;
    height: 5rem;
    margin-right: 2rem;
    background-color: transparent !important;
  }

  /* Scroll personalizado */
  .container::-webkit-scrollbar {
    width: 12px;
  }

  .container::-webkit-scrollbar-track {
    background: rgba(255, 255, 255, 0.1) !important;
  }

  .container::-webkit-scrollbar-thumb {
    background: rgba(255, 255, 255, 0.8) !important; /* M치s visible */
    border-radius: 12px;
  }

  .container::-webkit-scrollbar-thumb:hover {
    background: rgba(255, 255, 255, 1) !important; /* Totalmente blanco al pasar el mouse */
  }

  .icon {
    font-size: 3.2rem;
    display: flex;
    align-items: center;
    justify-content: center;
    /* NO pongas color-scheme ni forced-color-adjust aqu칤 */
    filter: none !important;
  }

  .icon svg {
    color: inherit !important;
    fill: currentColor !important;
    filter: none !important;
  }

  /* Colores espec칤ficos para cada 칤cono social */
  .icon[style*="1DB954"] svg { color: #1DB954 !important; fill: #1DB954 !important; }
  .icon[style*="25D366"] svg { color: #25D366 !important; fill: #25D366 !important; }
  .icon[style*="E1306C"] svg { color: #E1306C !important; fill: #E1306C !important; }
  .icon[style*="010101"] svg { color: #010101 !important; fill: #010101 !important; }
  .icon[style*="black"] svg { color: black !important; fill: black !important; }

  .link-text {
    color: white !important;
    font-weight: 700 !important;
    font-size: 3.2rem !important;
    flex: 1;
    font-family: "Amatic SC", cursive !important;
    text-shadow: 1px 1px 2px rgba(0, 0, 0, 0.3) !important;
    filter: none !important;
    -webkit-text-fill-color: white !important;
  }

  /* Responsive para m칩viles */
  @media (max-width: 640px) {
    .links-section {
      max-height: calc(100vh - 140px); /* Ajuste para m칩vil */
    }

    .container {
      max-width: 90vw;
      padding: 0.8rem 0;
    }

    .links-wrapper {
      gap: 1.3rem;
    }

    .link-content {
      padding: 0.5rem 10rem;
      border-radius: 22px;
      min-height: 105px; /* Altura consistente */
    }

    .icon-container {
      width: 4.8rem;
      height: 4.8rem;
      margin-right: 1.8rem;
    }

    .icon {
      font-size: 2.3rem;
    }

    .link-text {
      font-size: 2rem !important;
      font-weight: 700 !important;
      color: white !important;
      -webkit-text-fill-color: white !important;
    }
  }

  @media (max-width: 480px) {
    .links-section {
      max-height: calc(100vh - 130px); /* Ajuste para m칩viles peque침os */
    }

    .container {
      max-width: 95vw;
      padding: 0.6rem 0;
    }

    .links-wrapper {
      gap: 1.2rem;
    }

    .link-content {
      padding: 1.6rem 1.8rem;
      min-height: 100px;
      border-radius: 20px;
    }

    .icon-container {
      width: 4.5rem;
      height: 4.5rem;
      margin-right: 1.6rem;
    }

    .icon {
      font-size: 2.1rem;
    }

    .link-text {
      font-size: 1.9rem !important;
      font-weight: 700 !important;
      color: white !important;
      -webkit-text-fill-color: white !important;
    }
  }
</style>