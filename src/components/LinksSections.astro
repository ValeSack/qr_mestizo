<div class="links-section">
  <div class="container">
    <!-- Contenedor con scroll -->
    <div class="scroll-container">
      <div class="links-wrapper">
        {
          menuItems.map((item) => (
            <a
              href={item.href}
              target={item.href.startsWith("http") ? "_blank" : "_self"}
              rel={item.href.startsWith("http") ? "noopener noreferrer" : ""}
              class="link-item"
            >
              <div class="link-content">
                <div class={`icon-container ${item.bgColor}`}>
                  <span class="icon">{item.icon}</span>
                </div>
                <span class="link-text">{item.text}</span>
              </div>
            </a>
          ))
        }
      </div>
    </div>
  </div>
</div>

<style>
  .links-section {
    display: flex;
    align-items: center;
    justify-content: center;
    box-sizing: border-box;
  }

  .container {
    width: 100%;
    max-width: 28rem;
    margin: auto;
    box-sizing: border-box;
  }

  .scroll-container {
    height: 70vh; /* NUEVO: m√°s flexible para m√≥viles */
    overflow-y: auto;
    scrollbar-width: thin;
    scrollbar-color: rgba(255, 255, 255, 0.3) transparent;
  }

  .scroll-container::-webkit-scrollbar {
    width: 6px;
  }

  .scroll-container::-webkit-scrollbar-track {
    background: transparent;
  }

  .scroll-container::-webkit-scrollbar-thumb {
    background: rgba(255, 255, 255, 0.3);
    border-radius: 3px;
  }

  .scroll-container::-webkit-scrollbar-thumb:hover {
    background: rgba(255, 255, 255, 0.5);
  }

  .links-wrapper {
    padding-right: 0.5rem;
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .link-item {
    display: block;
    width: 100%;
    text-decoration: none;
    transition:
      transform 0.3s ease,
      filter 0.3s ease;
  }

  .link-item:hover {
    transform: scale(1.05);
    filter: drop-shadow(0 10px 8px rgba(0, 0, 0, 0.04))
      drop-shadow(0 4px 3px3rgba (0, 0, 0, 0.1));
  }

  .link-content {
    margin: 0 15px;
    display: flex;
    align-items: center;
    border: 3px solid rgb(252, 247, 247);
    border-radius: 20px;
    padding: 0.1rem 4rem;
    transition: background-color 0.3s ease;
  }

  .link-item:hover .link-content {
    background: rgba(255, 255, 255, 0.3);
  }

  .icon-container {
    padding: 0.5rem;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    flex-shrink: 0;
    width: 3rem;
    height: 3rem;
  }

  .icon {
    color: white;
    font-size: 1.5rem;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .link-text {
    color: white;
    font-weight: 500;
    font-size: 1.125rem;
    flex: 1;
  }

  .scroll-indicator {
    margin-top: 1rem;
    display: flex;
    justify-content: center;
  }

  .scroll-indicator .dot {
    width: 0.5rem;
    height: 0.5rem;
    background: rgba(255, 255, 255, 0.4);
    border-radius: 50%;
    margin: 0 0.125rem;
    animation: bounce 1s infinite;
  }

  .dot-2 {
    animation-delay: 0.1s;
  }

  .dot-3 {
    animation-delay: 0.2s;
  }

  @keyframes bounce {
    0%,
    80%,
    100% {
      transform: translateY(0);
    }
    40% {
      transform: translateY(-10px);
    }
  }

  /* Responsive */
  @media (max-width: 640px) {
    .links-section {
      padding: 0.5rem;
      min-height: 200vh;
      width: 100vw;
    }

    .container {
      width: 100%;
      max-width: 50vw;
      margin: 0;
      padding: auto;
    }

    .scroll-container {
      height: 65vh;
      min-height: 250px;
      max-height: none;
    }

    .link-content {
      padding: 100%;
      margin: 0;
    }

    .link-text {
      font-size: large;
    }
  }
</style>
