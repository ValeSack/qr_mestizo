---
import LinksSections from "./LinksSections.astro";
---

<div id="container">
	<main>
		<section id="links">
			<LinksSections />
		</section>
	</main>
	<div id="footer">
		<img id="logo" src="/horizontal-logo.png" alt="Casa Mestiza" />
	</div>
</div>

<style>
	#container {
		color: white;
		min-height: 100vh;
		height: 100vh;
		width: 100vw;
		display: flex;
		flex-direction: column;
		padding: 0;
		overflow: hidden;
	}

	main {
		flex: 1;
		display: flex;
		justify-content: center;
		align-items: stretch;
		padding: 0;
		margin: 0;
		overflow: hidden;
	}

	#links {
		display: flex;
		width: 100%;
		justify-content: center;
	}

	#footer {
		width: 100%;
		display: flex;
		align-items: center;
		justify-content: center;
		padding: 1.2rem;
		flex-shrink: 0;
		background: rgba(89, 58, 40, 0.95);
		backdrop-filter: blur(10px);
	}

	#logo {
		max-width: 85vw;
		width: 95%;
		height: auto;
		margin: 200px 10px 100px 10px;
	}

	/* Responsive para m√≥viles */
	@media screen and (max-width: 768px) {
		#container {
			height: 100vh;
			overflow: hidden;
		}

		main {
			align-items: stretch;
		}

		#footer {
			padding: 1rem;
			margin: 500px;
		}

		#logo {
			max-width: 80vw;
			width: 100%;
			margin: 50px;
		}
	}

	@media screen and (max-width: 480px) {
		#footer {
			padding: 0.50rem;
			margin: 500px;
		}

		#logo {
			max-width: 50vw;
			width: 100%;
			margin: 50px;
		}
	}
</style>