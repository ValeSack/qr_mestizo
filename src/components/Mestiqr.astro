---
import LinksSections from "./LinksSections.astro";
---

<div id="container">
	<main>
		<section id="links">
			<LinksSections />
		</section>
	</main>
</div>
<div id="footer">
	<img id="logo" src="/horizontal-logo.png" alt="Casa Mestiza" />
</div>

<style>
	#footer {
		width: 100vw;
		display: flex;
		align-items: center;
		justify-content: center;
		padding: 6%;
	}

	#logo {
		max-width: 80vw;
		width: 100%;
		height: auto;
		margin-bottom: 30px;
	}

	#container {
		color: white;
		min-height: 100vh;
		width: 100vw;
		display: flex;
		flex-direction: column;
		justify-content: center;
	}

	main {
		flex: 1;
		display: flex;
		justify-content: center;
	}

	#link-container {
		height: 100%;
		display: flex;
		align-items: start;
		flex-direction: column;
		justify-content: center;
		gap: 12px;
	}

	#links {
		display: flex;
		gap: 16px;
	}

	@media screen and (max-width: 768px) {
		#container {
			padding: 0;
		}
		#logo {
			max-width: 0px;
			margin-bottom: 0px;
		}
	}
</style>
